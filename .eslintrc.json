{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [
      2,
      2
    ],
    "semi": "off",
    "no-var": "error",
    "arrow-body-style": [
      "error",
      "always"
    ],
    "no-console": "error",
    "no-multi-spaces": [
      "error",
      {
        "exceptions": {
          "BinaryExpression": true
        }
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 1
      }
    ],
    "require-jsdoc": "off",
    "max-len": "off",
    "new-cap": "off",
    "object-curly-spacing": "off"
  }
}