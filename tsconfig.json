{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@context/*": [
        "src/context/*"
      ],
      "@root/*": [
        "./*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "src/**/**.ts",
    "test/**/**.ts",
    "test/**/.gitkeep"
  ],
  "exclude": [
    "node_modules"
  ]
}