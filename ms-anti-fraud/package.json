{
  "name": "ms-anti-fraud",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "cov:jest": "jest --coverage",
    "cov:acceptance": "nyc --reporter=json --report-dir=coverage-cucumber npm run test:acceptance",
    "cov:combine": "istanbul-combine -d coverage -p summary -r lcov -r text coverage-jest/coverage-final.json coverage-cucumber/coverage-final.json",
    "test": "jest && npm run test:acceptance",
    "test:unit": "NODE_ENV=test jest --config ./tests/unit/jest-unit.json",
    "test:integration": "NODE_ENV=test jest --config ./tests/integration/jest-integration.json",
    "test:acceptance": "NODE_ENV=test npx cucumber-js -p default",
    "test:cov": "npm run cov:jest && npm run cov:acceptance && npm run cov:combine",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.2.6",
    "@nestjs/microservices": "^10.2.8",
    "@nestjs/platform-express": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "kafkajs": "^2.2.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@faker-js/faker": "^8.2.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "istanbul-combine": "^0.0.1",
    "jest": "^29.5.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage-jest",
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/main.ts",
      "<rootDir>/src/config/*",
      ".module.ts",
      "index.ts"
    ],
    "coverageReporters": [
      "json"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^tests/(.*)$": "<rootDir>/tests/$1"
    }
  }
}
