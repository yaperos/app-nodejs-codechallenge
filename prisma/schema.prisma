// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Modelo TransactionStatus
model TransactionStatus {
  id              Int               @id @default(autoincrement())
  name            String
  createdAt       DateTime          @default(now())
  YapeTransaction YapeTransaction[]
}
// Modelo TransactionType
model TransactionType {
  id              Int               @id @default(autoincrement())
  name            String
  createdAt       DateTime          @default(now())
  YapeTransaction YapeTransaction[]
}
// Modelo YapeTransaction
model YapeTransaction {
  transactionExternalId   String   @id @default(uuid())
  tranferTypeId          Int      @default(1)
  value                   Float
  transactionStatusId     Int      @default(1)
  accountExternalIdDebit  String
  accountExternalIdCredit String
  createdAt               DateTime @default(now())

  // Relación con TransactionType
  transactionType TransactionType @relation(fields: [tranferTypeId], references: [id])

  // Relación con TransactionStatus
  transactionStatus TransactionStatus @relation(fields: [transactionStatusId], references: [id])
}
