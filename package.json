{
  "name": "app-nodejs-codechallenge",
  "version": "1.0.0",
  "author": "Gedy Palomino",
  "license": "MIT",
  "description": "Yape Code Challenge",
  "main": "./gateway/dist/index.js",
  "scripts": {
    "dev": "pnpm --filter '!./libs/*' dev",
    "dev:watch": "pnpm --filter '!./libs/*' dev:watch",
    "build:libs": "pnpm --filter './libs/*' build",
    "build:services": "pnpm --filter './services/*' build",
    "build:gateway": "pnpm --filter ./gateway build",
    "build": "pnpm build:libs && pnpm build:services && pnpm build:gateway",
    "start": "pnpm build && pnpm --filter '!./libs/*' start",
    "generate": "pnpm --filter './services/*' generate",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "workspaces": [
    "gateway",
    "services/*",
    "libs/*"
  ],
  "devDependencies": {
    "@types/node": "^20.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitest/coverage-c8": "^0.31.1",
    "drizzle-kit": "^0.18.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1",
    "vitest-mock-extended": "^1.1.3"
  }
}