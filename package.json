{
  "name": "app-nodejs-codechallenge",
  "version": "1.9.4",
  "description": "Code challenge for Yape",
  "author": "Julio Sarmiento",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app/server/Index.ts",
    "ext": "ts, js, yaml"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "cpy 'src/**/*.{json,yaml}' dist/src",
    "start": "node -r tsconfig-paths/register -r ts-node/register ./dist/src/app/server/Index.js",
    "prod": "npm run build && npm run start",
    "check-types": "tsc --noemit",
    "eslint": "eslint '*/**/*.{js,ts}' --fix --max-warnings=0 --no-error-on-unmatched-pattern",
    "test:unit": "jest --passWithNoTests --forceExit",
    "test:unit-connections": "jest --passWithNoTests --detectOpenHandles --forceExit",
    "test:features": "cucumber-js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collect-coverage --collectCoverageFrom=src/context/** --passWithNoTests",
    "prepare": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "axios": "0.26.1",
    "cookie-parser": "1.4.5",
    "cors": "2.8.5",
    "cpy-cli": "^4.2.0",
    "dotenv": "10.0.0",
    "express": "4.18.2",
    "express-promise-router": "4.1.1",
    "helmet": "5.0.2",
    "http-status": "1.5.2",
    "http-status-codes": "2.2.0",
    "husky": "7.0.4",
    "kafkajs": "^2.2.4",
    "node-dependency-injection": "2.7.3",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "tsconfig-paths": "4.0.0",
    "tsconfig-paths-jest": "0.0.1",
    "typeorm": "^0.3.19",
    "typescript": "4.9.4",
    "uuid": "^9.0.1",
    "uuid-validate": "0.0.3",
    "winston": "3.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "16.2.1",
    "@cucumber/cucumber": "8.1.2",
    "@types/chai": "4.3.1",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-list-endpoints": "6.0.0",
    "@types/glob": "7.2.0",
    "@types/helmet": "4.0.0",
    "@types/jest": "^27.0.2",
    "@types/jwt-encode": "1.0.0",
    "@types/morgan": "1.9.3",
    "@types/node": "17.0.18",
    "@types/supertest": "2.0.12",
    "@types/uuid-validate": "0.0.1",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "chai": "4.3.6",
    "eslint": "8.9.0",
    "eslint-config-google": "0.14.0",
    "express-list-endpoints": "6.0.0",
    "jest": "27.2.4",
    "morgan": "1.10.0",
    "nodemon": "2.0.19",
    "pactum": "3.1.6",
    "supertest": "6.2.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "4.0.0",
    "tsconfig-paths-jest": "0.0.1"
  }
}